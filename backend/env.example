# Anbu CSPM Backend Configuration

# Database
DATABASE_URL=sqlite:///./anbu.db

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
# Optional: Use IAM role instead of access keys
# AWS_ROLE_ARN=arn:aws:iam::123456789012:role/AnbuCSPMRole

# GCP Configuration (for future implementation)
GCP_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
# Or set the service account key directly
# GCP_SERVICE_ACCOUNT_KEY={"type": "service_account", ...}

# Scanning Configuration
SCAN_INTERVAL_MINUTES=60
MAX_CONCURRENT_SCANS=5
ENABLE_AWS_SCANNING=true
ENABLE_GCP_SCANNING=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/anbu.log
